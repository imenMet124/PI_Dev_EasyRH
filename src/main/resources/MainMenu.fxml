<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.Users.controller.MainMenuController">

    <!-- ✅ Top Header -->
    <top>
        <HBox id="header" spacing="15" style="-fx-background-color: #2C3E50; -fx-padding: 10;">
            <ImageView fx:id="logo" fitHeight="50" fitWidth="50"/>
            <Label text="User and Department Management"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Button id="logoutButton" text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: #E74C3C; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- ✅ Sidebar Navigation -->
    <left>
        <VBox id="sidebar" spacing="10" style="-fx-background-color: #34495E; -fx-padding: 15;">
            <Label text="Navigation"
                   style="-fx-text-fill: #ffffff; -fx-font-size: 18px; -fx-font-weight: bold;
                          -fx-padding: 10px 0; -fx-underline: true;"/>
            <Button text="Ajouter User" onAction="#goToAjouterUser" styleClass="sidebar-button" maxWidth="200"/>
            <Button text="Afficher Users" onAction="#goToAfficherUsers" styleClass="sidebar-button" maxWidth="200"/>
            <Button text="Ajouter Department" onAction="#goToAjouterDepartment" styleClass="sidebar-button" maxWidth="200"/>
            <Button text="Afficher Departments" onAction="#goToAfficherDepartments" styleClass="sidebar-button" maxWidth="200"/>
        </VBox>
    </left>

    <!-- ✅ Dynamic Content Area -->
    <center>
        <BorderPane fx:id="mainPane"/>
    </center>

</BorderPane>
