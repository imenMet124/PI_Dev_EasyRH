<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.Users.controller.SignUpController">
    <Label text="Sign Up" style="-fx-font-size: 24px;"/>
    <TextField fx:id="nameField" promptText="Full Name"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="phoneField" promptText="Phone Number"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
    <Button text="Sign Up" onAction="#handleSignUp"/>

    <Label fx:id="errorLabel"/>
    <Label fx:id="successLabel"/>
</VBox>

