<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="loginPane" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.Users.controller.LoginController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="User Login" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Email -->
    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200"/>

    <!-- Password -->
    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200"/>

    <!-- Login Button -->
    <Button text="Login" fx:id="loginButton" GridPane.columnIndex="1" GridPane.rowIndex="3" onAction="#handleLogin"/>

    <!-- Error Message -->
    <Label fx:id="errorLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-text-fill: red;"/>

</GridPane>
