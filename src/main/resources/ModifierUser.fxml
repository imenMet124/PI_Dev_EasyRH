<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.Users.controller.ModifierUserController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10" alignment="CENTER">
        <TextField fx:id="nameField" promptText="Name"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <TextField fx:id="phoneField" promptText="Phone"/>
        <ComboBox fx:id="roleBox"/>
        <TextField fx:id="positionField" promptText="Position"/>
        <TextField fx:id="salaryField" promptText="Salary"/>
        <DatePicker fx:id="datePicker"/>
        <ComboBox fx:id="statusBox"/>
        <ComboBox fx:id="departmentBox"/>

        <HBox spacing="10">
            <Button text="Save Changes" onAction="#handleSaveChanges"/>
            <Button text="Cancel" onAction="#handleCancel"/>
        </HBox>
    </VBox>
</AnchorPane>
