<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.tache.controllers.AffectationController">
    <VBox spacing="15" alignment="CENTER" prefWidth="800" prefHeight="600"
          AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <!-- ✅ Styled Title at the Top -->
        <Label text="📋 Gestion des Affectations"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;
                      -fx-padding: 5; -fx-underline: true;"/>

        <!-- ✅ Search Bar -->
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <TextField fx:id="searchField" promptText="🔍 Rechercher par employé ou tâche..."
                       style="-fx-padding: 8; -fx-font-size: 14px; -fx-border-radius: 6; -fx-background-radius: 6;
                              -fx-border-color: #BDC3C7; -fx-background-color: white;"/>
            <Button text="Rechercher" onAction="#rechercherAffectation"
                    style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-padding: 8 15;
                           -fx-font-size: 14px; -fx-border-radius: 6; -fx-background-radius: 6;"/>
        </HBox>

        <!-- ✅ Styled TableView for Affectations -->
        <StackPane style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 6;
                         -fx-background-radius: 6; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0, 0, 3);">
            <TableView fx:id="affectationTable" style="-fx-background-color: white;" prefHeight="400">
                <columns>
                    <TableColumn fx:id="idAffectationCol" text="ID" prefWidth="50"
                                 style="-fx-alignment: CENTER; -fx-font-size: 14px; -fx-font-weight: bold;"/>

                    <TableColumn fx:id="employeCol" text="👤 Employé" prefWidth="200"
                                 style="-fx-alignment: CENTER-LEFT; -fx-font-size: 14px; -fx-font-weight: bold;"/>

                    <TableColumn fx:id="tacheCol" text="🛠️ Tâche" prefWidth="250"
                                 style="-fx-alignment: CENTER-LEFT; -fx-font-size: 14px; -fx-font-weight: bold;"/>

                    <TableColumn fx:id="deadlineCol" text="⏳ Deadline" prefWidth="150"
                                 style="-fx-alignment: CENTER; -fx-font-size: 14px; -fx-font-weight: bold;"/>

                    <TableColumn fx:id="dateCol" text="📅 Date Affectation" prefWidth="150"
                                 style="-fx-alignment: CENTER; -fx-font-size: 14px; -fx-font-weight: bold;"/>

                    <TableColumn fx:id="statutCol" text="✔ Statut" prefWidth="120"
                                 style="-fx-alignment: CENTER; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                </columns>
            </TableView>
        </StackPane>

        <!-- ✅ Styled Buttons in Footer -->
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 15; -fx-background-color: #ECF0F1;">
            <Button fx:id="ajouterBtn" text="➕ Ajouter" onAction="#ouvrirFormulaireAffectation"
                    style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-padding: 8 15;
                           -fx-font-size: 14px; -fx-border-radius: 6; -fx-background-radius: 6;"/>

            <Button fx:id="retirerBtn" text="🗑️ Retirer" onAction="#retirerEmployeTache"
                    style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-padding: 8 15;
                           -fx-font-size: 14px; -fx-border-radius: 6; -fx-background-radius: 6;"/>

            <Button fx:id="terminerTacheBtn" text="✔ Terminer" onAction="#terminerTache"
                    style="-fx-background-color: #17A2B8; -fx-text-fill: white; -fx-padding: 8 15;
                           -fx-font-size: 14px; -fx-border-radius: 6; -fx-background-radius: 6;"/>
        </HBox>

    </VBox>
</AnchorPane>
