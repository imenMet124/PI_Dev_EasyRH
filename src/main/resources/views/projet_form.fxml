<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.tache.controllers.ProjetFormController">

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Formulaire Projet" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints minWidth="250"/>
                </columnConstraints>

                <!-- ðŸ”¹ Nom Projet -->
                <Label text="Nom Projet:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- ðŸ”¹ Description -->
                <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextArea fx:id="descField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- ðŸ”¹ Statut -->
                <Label text="Statut:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="statutCombo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- ðŸ”¹ Date de DÃ©but -->
                <Label text="Date DÃ©but:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dateDebutPicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- ðŸ”¹ Date de Fin -->
                <Label text="Date Fin:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dateFinPicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- ðŸ”¹ Buttons -->
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="saveButton" text="Enregistrer" onAction="#saveProjet" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                <Button fx:id="cancelButton" text="Annuler" onAction="#cancel" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
