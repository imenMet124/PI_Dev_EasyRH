<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.tache.controllers.MainController">

    <!-- ✅ Top Header with Logo -->
    <top>
        <HBox id="header">
            <ImageView fx:id="logo" fitHeight="50" fitWidth="50"/>
            <Label text="EasyHR Dashboard" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Button id="logoutButton" text="Logout" onAction="#handleLogout"/>
        </HBox>
    </top>

    <!-- ✅ Sidebar Navigation -->
    <left>
        <VBox id="sidebar" spacing="10">
            <Label text="Navigation"
                   style="-fx-text-fill: #ffffff;
              -fx-font-size: 18px;
              -fx-font-weight: bold;
              -fx-padding: 10px 0;
              -fx-underline: true;
              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);"/>
            <Button text="Employés" onAction="#openEmployeView" styleClass="sidebar-button" maxWidth="200"/>
            <Button text="Projets" onAction="#openProjetView" styleClass="sidebar-button" maxWidth="200"/>
            <Button text="Tâches" onAction="#openTacheView" styleClass="sidebar-button" maxWidth="200"/>
            <Button text="Affectations" onAction="#openAffectationView" styleClass="sidebar-button" maxWidth="200"/>

        </VBox>
    </left>

    <!-- ✅ Dynamic Content -->
    <center>
        <BorderPane fx:id="mainPane"/>
    </center>

</BorderPane>
